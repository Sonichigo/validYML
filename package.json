{
  "name": "validyml",
  "displayName": "validYML",
  "description": "ValidYML VSCode Extension is a powerful tool designed to enhance your YAML development experience by providing real-time validation, best practice enforcement, and automatic cleanup of configuration files directly within Visual Studio Code.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Programming Languages"
  ],
  "publisher": "Sonichigo",
  "icon": "media/logo.png",
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "https://github.com/sonichigo/validYML"
  },
  "sponsor": {
  "url": "https://github.com/sponsors/sonichigo"
  },
  "main": "./dist/extension.js",
  "contributes": {
        "languages": [
            {
                "id": "yaml",
                "aliases": [
                    "YAML",
                    "yaml"
                ],
                "extensions": [
                    ".yml",
                    ".yaml"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "dockercompose",
                "aliases": [
                    "Docker Compose",
                    "docker-compose"
                ],
                "extensions": [
                    "docker-compose.yml",
                    "docker-compose.yaml",
                    "compose.yml",
                    "compose.yaml"
                ],
                "configuration": "./language-configuration.json",
                "filenamePatterns": [
                    "docker-compose*.yml",
                    "docker-compose*.yaml"
                ]
            }
        ],
        "grammars": [
            {
                "language": "yaml",
                "scopeName": "source.yaml",
                "path": "./syntaxes/yaml.tmLanguage.json"
            },
            {
                "language": "dockercompose",
                "scopeName": "source.docker-compose",
                "path": "./syntaxes/docker-compose.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "validyml.validateFile",
                "title": "ValidYML: Validate Current File"
            },
            {
                "command": "validyml.cleanFile",
                "title": "ValidYML: Clean Current File"
            }
        ]
    },
  "dependencies": {
        "yaml": "^2.3.1"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
